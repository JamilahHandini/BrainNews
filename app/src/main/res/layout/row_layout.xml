<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/mainLayout">


    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_shape"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002">

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="250dp"

            android:layout_marginLeft="250dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="26dp"
            android:gravity="right|top"
            android:lineSpacingExtra="-4sp"
            android:text="Tanggal" />

        <androidx.cardview.widget.CardView
            android:layout_width="321dp"
            android:layout_height="157dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="60dp"
            android:foregroundGravity="center"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/gambar_berita"
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:src="@drawable/contoh_foto" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/judul_berita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="239dp"
            android:gravity="top"
            android:lineSpacingExtra="-1sp"
            android:text="Judul berita" />

        <TextView
            android:id="@+id/publisher_berita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="201dp"
            android:layout_marginTop="292dp"
            android:gravity="right|top"
            android:lineSpacingExtra="-4sp"
            android:text="Nama Publisher Berita" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>